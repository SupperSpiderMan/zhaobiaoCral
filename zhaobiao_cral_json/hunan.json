{
    "name": "hunan",
    "main_url": "http://www.ccgp-hunan.gov.cn",

    "item_value": ["fwebsite", "fregion"],
        "fwebsite": "湖南政府采购网",
        "fregion": "湖南",

    "start_url": [
        "http://www.ccgp-hunan.gov.cn/mvc/getNoticeList4Web.do"
    ],
        "method": "post",
        "param": [
            {
                "data": {
                    "nType": "prcmNotices",
                    "startDate": "{self.start_time}",
                    "endDate": "{self.end_time}",
                    "page": "1",
                    "pageSize": "18"
                }
            }
        ],

    "func": {
        "parse": {
            "parse_json": {
                "table_row": {
                    "method": "json",
                    "path": "rows"
                },

                "item_loader": {
                    "zhaobiao_type": [
                        "json",
                        "PRCM_MODE_NAME"
                    ],
                    "ftitle": [
                        "json",
                        "NOTICE_TITLE"
                    ],
                    "ftime": [
                        "add_xpath",
                        "NEWWORK_DATE"
                      ],
                    "__noticeid": [
                      "json",
                        "NOTICE_ID"
                    ],
                    "furl": [
                        "format",
                        "http://www.ccgp-hunan.gov.cn/mvc/viewNoticeContent.do?noticeId={__noticeid}"
                    ]
                },
                "request": {
                    "callback": "parse_detail"
                }
            },
            "next_page": {
                "data": "page"
            }
        },
        "parse_detail": {
            "parse_article": {
                "text": {
                    "xpath": "//body"
                },
                "file": {
                    "xpath": "//div[@class='relevant_notice'][1]"
                },
                "key_word": {
                    "money": ["采购预算：(...)元"],
                    "source_company": ["采购人：(...)地", "采购人名称：(...)地"]
                }
            }
        }
    }
}